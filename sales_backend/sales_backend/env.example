# Configuration pour Sales Tracker Pro

# Base de données PostgreSQL
DATABASE_NAME=sales_tracker_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Django
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email configuration (Gmail)
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Twilio SMS# Configuration SMS International - Services gratuits disponibles

# Option 1: Textbelt (1 SMS gratuit par jour par IP - International)
# Aucune configuration requise - fonctionne directement

# Option 2: SMS77 (500 SMS gratuits à l'inscription - International)
# SMS77_API_KEY=your_sms77_api_key

# Option 3: SMSApi (500 SMS gratuits à l'inscription - International)  
# SMSAPI_TOKEN=your_smsapi_token

# Option 4: Twilio (payant mais très fiable - International)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# Firebase Configuration (pour notifications push uniquement)
FIREBASE_TYPE=service_account
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME=15  # minutes
JWT_REFRESH_TOKEN_LIFETIME=7  # days
